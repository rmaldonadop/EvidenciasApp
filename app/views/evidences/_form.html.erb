<%= form_with(model: evidence, local: true) do |form| %>
  <% if evidence.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(evidence.errors.count, "error") %> prohibited this evidence from being saved:</h2>

      <ul>
      <% evidence.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :nombre %>
    <%= form.text_field :nombre, id: :evidence_nombre, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :archivo %>
    <%= form.file_field :archivo %>
  </div>

  <div class="form-group">
    <%= form.label "Facultad" %>
    <%= form.collection_select :facultad, Facultad.all.order("nombre"), :codigo, :nombre, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Escuela" %>
    <%= form.collection_select :escuela, Escuela.all.order("nombre"), :codigo, :nombre, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Carrera" %>
    <%= form.collection_select :carrera, Carrera.all.order("nombre"), :codigo, :nombre, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :sello_id %>
    <%= form.collection_select :sello_id, Sello.all, :id, :tipo, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :tipo_evidencia_id %>
    <%= form.collection_select :evidencetype_id, Evidencetype.all, :id, :tipo, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :descripcion %>
    <%= form.text_area :descripcion, id: :evidence_descripcion, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit nil, class: "btn btn-success" %>
  </div>
<% end %>
