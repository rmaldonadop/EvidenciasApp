<h1>Escuelas</h1>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Director</th>
      <th>Facultad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @escuelas.each do |escuela| %>
      <tr>
        <td><%= escuela.codigo %></td>
        <td><%= escuela.nombre %></td>
        <td><%= escuela.director %></td>
        <td><%= escuela.facultad.nombre %></td>
        <td><%= link_to 'Ver', escuela %></td>
        <td><%= link_to 'Editar', edit_escuela_path(escuela) %></td>
        <% if can? :destroy, @escuela %>
          <td><%= link_to 'Borrar', escuela, method: :delete, data: { confirm: 'Â¿Esta Seguro?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

