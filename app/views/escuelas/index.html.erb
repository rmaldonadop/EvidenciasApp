<p id="notice"><%= notice %></p>

<h1>Escuelas</h1>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Director</th>
      <th>Facultad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @escuelas.each do |escuela| %>
      <tr>
        <td><%= escuela.codigo %></td>
        <td><%= escuela.nombre %></td>
        <td><%= escuela.director %></td>
        <td><%= escuela.facultad %></td>
        <td><%= link_to 'Show', escuela %></td>
        <td><%= link_to 'Edit', edit_escuela_path(escuela) %></td>
        <td><%= link_to 'Destroy', escuela, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

