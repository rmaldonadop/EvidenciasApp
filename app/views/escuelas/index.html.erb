<p id="notice"><%= notice %></p>

<div class="row">
  <h1>Escuelas</h1>
  <h2>Listado de Carreras</h2>
  <table class="table table-condensed table-hover" style="width: 60%">
    <thead>
      <tr>
        <th style="width: 15%">Codigo</th>
        <th style="width: 15%">Nombre</th>
        <th style="width: 15%">Director</th>
        <th style="width: 15%">Facultad</th>
        <th colspan="3" style="width: 15%"></th>
      </tr>
    </thead>

    <tbody>
      <% @escuelas.each do |escuela| %>
        <tr>
          <td><%= escuela.codigo %></td>
          <td><%= escuela.nombre %></td>
          <td><%= escuela.director %></td>
          <td><%= escuela.facultad.nombre %></td>
          <td><%= link_to 'Ver', escuela %></td>
          <td><%= link_to 'Editar', edit_escuela_path(escuela) %></td>
          <% if can? :destroy, @escuela %>
            <td><%= link_to 'Borrar', escuela, method: :delete, data: { confirm: 'Â¿Esta Seguro?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table> 
</div>
<%= link_to 'Nueva Escuela', new_escuela_path %>
