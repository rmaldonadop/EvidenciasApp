<p id="notice"><%= notice %></p>

<h1>Evidencetypes</h1>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @evidencetypes.each do |evidencetype| %>
      <tr>
        <td><%= evidencetype.codigo %></td>
        <td><%= evidencetype.tipo %></td>
        <td><%= link_to 'Show', evidencetype %></td>
        <td><%= link_to 'Edit', edit_evidencetype_path(evidencetype) %></td>
        <td><%= link_to 'Destroy', evidencetype, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

