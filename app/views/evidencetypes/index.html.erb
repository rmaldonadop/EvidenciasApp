<p id="notice"><%= notice %></p>

<div class="row">
  <h1>Tipos de Evidencias</h1>
  <h2>Listado de Tipo de Evidencias</h2>
  <table class="table table-condensed table-hover" style="width: 36%">
    <thead>
      <tr>
        <th style="width: 15%">Codigo</th>
        <th style="width: 15%">Tipo</th>
        <th colspan="3" style="width: 15%"></th>
      </tr>
    </thead>

    <tbody>
      <% @evidencetypes.each do |evidencetype| %>
        <tr>
          <td><%= evidencetype.codigo %></td>
          <td><%= evidencetype.tipo %></td>
          <td><%= link_to 'Ver', evidencetype %></td>
          <td><%= link_to 'Editar', edit_evidencetype_path(evidencetype) %></td>
          <% if can? :destroy, @evidencetype %>
            <td><%= link_to 'Borrar', evidencetype, method: :delete, data: { confirm: 'Â¿Esta Seguro?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to 'Nuevo Tipo', new_evidencetype_path %>
