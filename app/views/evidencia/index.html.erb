<p id="notice"><%= notice %></p>

<h1>Evidencia</h1>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Universidad</th>
      <th>Usuario</th>
      <th>Tipo evidencia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @evidencia.each do |evidencium| %>
      <tr>
        <td><%= evidencium.codigo %></td>
        <td><%= evidencium.nombre %></td>
        <td><%= evidencium.descripcion %></td>
        <td><%= evidencium.universidad %></td>
        <td><%= evidencium.usuario %></td>
        <td><%= evidencium.tipo_evidencia %></td>
        <td><%= link_to 'Show', evidencium %></td>
        <td><%= link_to 'Edit', edit_evidencium_path(evidencium) %></td>
        <td><%= link_to 'Destroy', evidencium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

