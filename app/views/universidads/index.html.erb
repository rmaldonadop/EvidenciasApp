        <td><%= universidad.casa_matriz %></td>
        <td><%= link_to 'Ver', universidad %></td>
        <td><%= link_to 'Editar', edit_universidad_path(universidad) %></td>
        <td><%= link_to 'Borrar', universidad, method: :delete, data: { confirm: 'Â¿Esta Seguro?' } %></td>
