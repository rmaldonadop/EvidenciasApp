<p id="notice"><%= notice %></p>

<div class="row">
  <h1>Facultades</h1>
  <h2>Listado de Facultades</h2>
  <table class="table table-condensed table-hover" style="width: 60%">
    <thead>
      <tr>
        <th style="width: 15%">Codigo</th>
        <th style="width: 15%">Nombre</th>
        <th style="width: 15%">Direccion</th>
        <th style="width: 15%">Universidad</th>
        <th colspan="3" style="width: 15%"></th>
      </tr>
    </thead>

    <tbody>
      <% @facultads.each do |facultad| %>
        <tr>
          <td><%= facultad.codigo %></td>
          <td><%= facultad.nombre %></td>
          <td><%= facultad.direccion %></td>
          <td><%= facultad.universidad.codigo %></td>
          <td><%= link_to 'Ver', facultad %></td>
          <td><%= link_to 'Editar', edit_facultad_path(facultad) %></td>
          <% if can? :destroy, @facultad %>
            <td><%= link_to 'Borrar', facultad, method: :delete, data: { confirm: 'Â¿Esta Seguro?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to 'Nueva Facultad', new_facultad_path %>
