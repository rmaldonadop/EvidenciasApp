<p id="notice"><%= notice %></p>

<div class="row">
  <h1>Carreras</h1>
  <h2>Listado de Carreras</h2>
  <table class="table table-condensed table-hover" style="width: 60%">
    <thead>
      <tr>
        <th style="width: 15%">Codigo</th>
        <th style="width: 15%">Nombre</th>
        <th style="width: 15%">Jefe carrera</th>
        <th style="width: 15%">Escuela</th>
        <th colspan="3"  style="width: 15%"></th>
      </tr>
    </thead>

    <tbody>
      <% @carreras.each do |carrera| %>
        <tr>
          <td><%= carrera.codigo %></td>
          <td><%= carrera.nombre %></td>
          <td><%= carrera.jefe_carrera %></td>
          <td><%= carrera.escuela.nombre %></td>
          <td><%= link_to 'Ver', carrera %></td>
          <td><%= link_to 'Editar', edit_carrera_path(carrera) %></td>
          <% if can? :destroy, @carrera %>
            <td><%= link_to 'Borrar', carrera, method: :delete, data: { confirm: 'Â¿Esta Seguro?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to 'Nueva Carrera', new_carrera_path %>
