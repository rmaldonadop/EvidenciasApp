<div class="row">
  <div class="col-md-2 center-block no-float">
    <h2><span class="glyphicon glyphicon-floppy-disk"></span> Registrar </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role: "form"}) do |f| %>
      
      <div class="form-group">
        <%= devise_error_messages! %>
      </div>

      <div class="form-group">
        <%= f.label :rut %><br />
        <%= f.text_field :rut, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :nombre %><br />
        <%= f.text_field :nombre, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :apellidos %><br />
        <%= f.text_field :apellido, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :contraseÃ±a%>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres minimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :confirmar_contraseÃ±a %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="text-center">
        <%= f.submit "Registrarse", class: "btn btn-success" %>
      </div>
      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>

